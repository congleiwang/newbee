<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wang.conglei.mybatis.dao.EmpDao">

    <resultMap id="emp" type="emp">
        <id column="id" property="id" />
        <result column="emp_name" property="empName"/>
        <result column="hire_date" property="hireDate"/>
        <association property="dept" javaType="dept" >
            <id column="dept_id" property="id"/>
            <result column="dept_name" property="deptName"/>
            <result column="loc" property="loc"/>
        </association>
    </resultMap>

    <select id="list" resultMap="emp">
        select id,emp_name,hire_date  from sys_emp
        <if test="map != null">
            where id in
            <foreach collection="map.values" item="id" separator="," open="(" close=")">
                #{id}
            </foreach>
        </if>
    </select>
    <insert id="insert" parameterType="list">
        insert into sys_emp(emp_name,hire_date) values
        <foreach collection="list" index="i" item="emp" separator=",">
            (#{emp.empName},#{emp.hireDate})
        </foreach>
    </insert>
    <select id="getEmpById" >
        select sys_emp.id,emp_name,hire_date,sys_dept.id dept_id,dept_name,loc from sys_emp
        left join sys_dept on sys_emp.dept_id = sys_dept.id
        where id= #{id}
    </select>

</mapper>